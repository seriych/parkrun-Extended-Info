{
  "manifest_version": 2,
  "name": "parkrun Extended Info",
  "short_name": "parkrunExInf",
  "version": "2018.10.8.0",
  "author": "seriych",

  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "icons": {
     "16": "icons/icon16.png",
     "32": "icons/icon32.png",
     "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "images/icon48.png",
    "images/config36.png",
    "images/prefsBackground.png",
    "images/flags/en.png",
    "images/flags/ru.png",
    "images/man36.png",
    "images/woman36.png"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "include_globs": ["*parkrun.??*/?*"],
      "run_at": "document_idle",
      "js": [ "parkrunExtendedInfo.js" ]
    }
  ],
  "permissions": [
    "storage"
  ]
}